<style>
    header {
    background-color: #600000;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    max-height: 60px;
    z-index: 7;
  }
  
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .navbar-brand {
    font-size: 20px;
    font-weight: bold;
    text-decoration: none;
    color: #fff;
  }
  
  .navbar-nav {
    list-style: none;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    margin: 0;
    padding: 0;
  }
  
  .nav-item {
    margin-left: 10px;
  }
  
  .nav-link {
    text-decoration: none;
    color: #fff;
    padding: 5px 10px;
  }
    
  .nav-link:hover {
    background-color: #e9ecef;
    border-radius: 5px;
    color: #f44336;
    border-color: #f44336;
  }
  
</style>
<header>
  <nav class="navbar">
    <a class="navbar-brand" href="/">SOCIAL INTERFACE</a>
    <ul class="navbar-nav">
      <% if (locals.user) { %>
        <li class="nav-item">
          <a class="nav-link" href="/users/profile"><%= locals.user.name %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/sign-out">Sign-Out</a>
        </li>
      <% } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/users/sign-in">Sign-In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/sign-up">Sign-Up</a>
        </li>
      <% } %>
    </ul>
  </nav>
</header>


